{#
 # PAGER
 #
 #  A template include used to display next and previous links.
 #}

{# output #}
{% if pagination and (pagination.prev or pagination.next) %}

    <nav class="post-nav">

        <ul class="pager">

            {% if pagination.prev %}
                <li class="{{pagination.prev.class}}">
                    <a href="{{pagination.prev.link}}">{{__("view previous", 'theme')}}</a>
                </li>
            {% endif %}

            {% if pagination.next %}
                <li class="{{pagination.next.class}}">
                    <a href="{{pagination.next.link}}">{{__("view next", 'theme')}}</a>
                </li>
            {% endif %}

        </ul>
        <!-- end ul.pager -->

    </nav>
    <!-- end nav.post-nav -->

{% endif %}
