 #  timber:   https://github.com/jarednova/timber/wiki/WP-Integration
 #}

{# output #}
{% if pagination and (pagination.prev or pagination.next) %}

    <nav class="post-nav">

        <ul class="pagination">

            {% if pagination.prev %}
                <li class="{{pagination.prev.class}}">
                    <a href="{{pagination.prev.link}}">{{__("view previous", 'theme')}}</a>
                </li>
            {% endif %}

            {% for page in pagination.pages %}
                <li class="{{page.class}}">
                    {% if page.link %}
                        <a href="{{page.link}}">{{page.title}}</a>
                    {% else %}
                        <span>{{page.title}}</span>
                    {% endif %}
                </li>
            {% endfor %}

            {% if pagination.next %}
                <li class="{{pagination.next.class}}">
                    <a href="{{pagination.next.link}}">{{__("view next", 'theme')}}</a>
                </li>
            {% endif %}

        </ul>
        <!-- end ul.pagination -->

    </nav>
    <!-- end nav.post-nav -->

{% endif %}
