{# parent template #}
{% extends 'layouts/full-width.html.twig' %}

{# define content block #}
{% block content %}

    {# error message #}
    <div class="alert alert-warning">
        {{__("Sorry, but the page you were trying to view does not exist.", 'theme')}}
    </div>

    <p>
        {{__("It looks like this was the result of either:", 'theme')}}
    </p>

    <ul>
        <li>
            {{__("a mistyped address", 'theme')}}
        </li>
        <li>
            {{__("an out-of-date link", 'theme')}}
        </li>
    </ul>

    {# search form #}
    {% include 'includes/search-form.html.twig' %}

{% endblock %}
