 #   pages/404.html.twig
 #
 #  Context:
 #   http_host            string
 #   wp_title             string
 #   wp_head              TimberFunctionWrapper
 #   wp_footer            TimberFunctionWrapper
 #   body_class           string
 #   site                 TimberSite
 #   theme                TimberTheme
 #   theme_dir            string
 #   language_attributes  TimberFunctionWrapper
 #   stylesheet_uri       string
 #   template_uri         string
 #   posts                TimberQueryIterator
