{
    "name": "mindgruve/mg-press",
    "description": "Wordpress + Composer + Twig",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Simpson",
            "email": "ksimpson@mindgruve.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.3.1",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.3.1.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "require": {
        "php": ">=5.3.0",
        "wordpress": "4.3.1",
        "fancyguy/webroot-installer": "1.0.0",
        "symfony/filesystem": "~2.7",
        "symfony/finder": "~2.7",
        "symfony/yaml": "~2.7",
        "jarednova/timber": "~0.20",
        "filp/whoops": "1.1.7",
        "dannyvankooten/php-router": "1.1.0-alpha",
        "mindgruve/mg-reverse-proxy": "^0.9.0"
    },
    "require-dev": {
        "interconnectit/search-replace-db": "3.1",
        "symfony/console": "~2.7",
        "wp-cli/wp-cli": "~0.20"
    },
    "extra": {
        "webroot-dir": "web/wp",
        "webroot-package": "wordpress",
        "installer-paths": {
            "vendor/wpackagist/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "vendor/wpackagist/themes/{$name}": [
                "type:wordpress-theme"
            ]
        },
        "wp-mu-plugins": [
            "timber"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "Mindgruve\\MgPress\\ComposerScripts::installWordpress"
        ],
        "post-update-cmd": [
            "Mindgruve\\MgPress\\ComposerScripts::updateWordpress"
        ],
        "update-wp-db": [
            "Mindgruve\\MgPress\\ComposerScripts::upgradeWordpressDB"
        ]
    }
}
